/* 遮罩层 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.drawer-mask.visible {
  opacity: 1;
  visibility: visible;
}

/* 主抽屉容器 */
.drawer-container {
  position: fixed;
  top: 0;
  right: -100%;
  width: 75%;
  height: 100%;
  background-color: #FFFFFF;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  box-shadow: -8px 0 20px rgba(0, 0, 0, 0.2);
  padding: 0;
  box-sizing: border-box;
  transition: all 0.3s ease;
  transform: translateX(0);
  opacity: 0;
  visibility: hidden;
  overflow: hidden; /* 改为hidden，内部内容区域单独滚动 */
  -webkit-overflow-scrolling: touch;
}

.drawer-container.visible {
  right: 0;
  opacity: 1;
  visibility: visible;
  box-shadow: -8px 0 20px rgba(0, 0, 0, 0.2);
}

/* 抽屉内容区域 - 可滚动 */
.drawer-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 80px; /* 为底部按钮留出空间 */
}

/* 底部填充区域 */
.bottom-padding {
  height: 20px; /* 额外底部填充 */
}

/* 子抽屉容器 */
.sub-drawer {
  position: fixed;
  top: 0;
  right: -100%; /* 确保完全在屏幕外 */
  width: 75%;
  height: 100%;
  background-color: #FFFFFF;
  z-index: 1001; /* 比主抽屉高 */
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  transition: all 0.3s ease;
  transform: translateX(0); /* 不使用transform，改用right定位 */
  opacity: 0;
  visibility: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.sub-drawer.visible {
  right: 0; /* 显示时移动到屏幕内 */
  opacity: 1;
  visibility: visible;
  box-shadow: -8px 0 20px rgba(0, 0, 0, 0.2);
}

.sub-drawer-header {
  padding: 16px 20px;
  border-bottom: 1px solid #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: space-between; /* 改为两端对齐 */
  position: relative;
}

.sub-drawer-title {
  font-size: 18px;
  font-weight: 600;
  color: #1F2937;
  flex: 1; /* 占据可用空间 */
  text-align: left; /* 标题左对齐 */
  white-space: nowrap; /* 防止换行 */
  margin-right: 10px; /* 与按钮保持间距 */
}

.sub-drawer-content {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
  box-sizing: border-box;
}

