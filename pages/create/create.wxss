/* pages/create/create.wxss */
.container {
  min-height: 100vh;
  background-color: #F7F8FA;
}

.content {
  padding-top: 30rpx;
  padding-bottom: 40rpx;
}

/* 添加导航头部样式 */
.nav-header {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  margin-bottom: 30rpx;
}

.back-button {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.header-title-container {
  width: 100%;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.mb-16 {
  margin-bottom: 32rpx;
}

.text-center {
  text-align: center;
}

.px-20 {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.p-16 {
  padding: 32rpx;
}

.my-16 {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.gap-8 {
  gap: 16rpx;
}

/* 标题样式 */
.h2 {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.2;
}

.text-body {
  font-size: 28rpx;
  line-height: 1.5;
  color: #4B5563;
}

.text-small {
  font-size: 24rpx;
  line-height: 1.4;
  color: #6B7280;
}

/* Flex工具类 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

/* 表单样式 */
.form-section {
  margin-bottom: 32rpx;
}

.section-label {
  display: block;
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background-color: #F9FAFB;
  margin-bottom: 8rpx;
}

.input-tip {
  display: block;
  margin-top: 8rpx;
}

/* 头像上传区域 */
.avatar-upload {
  width: 100%;
}

.avatar-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #F3F4F6;
  margin-bottom: 16rpx;
}

.avatar-image, .avatar-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F3F4F6;
}

.upload-icon {
  font-size: 64rpx;
  color: #9CA3AF;
}

.avatar-confirmed-tag {
  position: relative;
  width: 200rpx;
  height: 48rpx;
  background-color: #059669;
  color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -14rpx; /* 从36rpx调整为-14rpx，上移50rpx（约25px） */
  margin-bottom: 24rpx;
}

.confirmed-icon {
  font-size: 28rpx;
}

.remove-avatar-btn {
  position: absolute;
  top: -4rpx; /* 从-2rpx调整为-4rpx，上移2rpx（约1px） */
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #EF4444;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  font-size: 32rpx;
}

/* 处理中进度条 */
.processing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 16rpx;
}

.processing-progress {
  width: 80%;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background-color: #10B981;
}

.progress-text {
  color: white;
  font-size: 24rpx;
  text-align: center;
}

/* 上传方法区域 */
.upload-methods-wrapper {
  width: 100%;
  margin-top: 32rpx;
}

.upload-methods {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.upload-method-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 8rpx;
  padding: 16rpx;
  width: 30%;
}

.upload-method-btn.active {
  background-color: #ECFDF5;
  border-color: #10B981;
}

.method-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.method-text {
  font-size: 24rpx;
  color: #4B5563;
}

/* 按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background-color: #10B981;
  color: white;
}

.btn-secondary {
  background-color: #F3F4F6;
  color: #1F2937;
}

.action-btn {
  width: 100%;
  flex: 1;
}

.upload-btn {
  width: 100%;
  margin-top: 24rpx;
}

.submit-btn {
  width: 100%;
}

.upload-tips {
  margin-top: 16rpx;
}

.upload-tip {
  display: block;
  color: #6B7280;
  font-size: 24rpx;
}

/* 友情提醒区域 */
.info-box {
  margin-top: 32rpx;
  padding: 24rpx;
  background-color: #FFFBEB;
  border-radius: 12rpx;
  border: 2rpx solid #FEF3C7;
}

.info-header {
  margin-bottom: 16rpx;
}

.info-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #F59E0B;
  margin-right: 12rpx;
}

.info-title {
  color: #92400E;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
}

.info-text {
  color: #92400E;
}

/* 标题样式 */
.card-header {
  margin-bottom: 32rpx;
}

.card-title {
  display: block;
  margin-bottom: 8rpx;
}

.card-subtitle {
  display: block;
}

/* 修改 mt-16 */
.mt-16 {
  margin-top: 32rpx;
} 