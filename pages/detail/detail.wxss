/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: #F7F8FA;
}

.content {
  padding-top: 16px;
  padding-bottom: 40px;
}

/* 确保所有区域宽度一致 */
.profile-card,
.action-buttons,
.sound-section,
.danmaku-input-section,
.comments-section,
.achievements-section {
  margin: 0 20px;
  width: calc(100% - 40px);
  box-sizing: border-box;
  margin-bottom: 16px;
}

/* 个人资料卡片 */
.profile-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24px;
  border-radius: 16px;
  margin-top: 20px;
}

.profile-avatar-container {
  position: relative;
  margin-bottom: 16px;
}

.profile-avatar {
  width: 96px;
  height: 96px;
  border-radius: 50%;
  background: #F3F4F6;
  object-fit: cover;
}

.rank-tag {
  position: absolute;
  top: -4px;
  right: -8px;
  background: #F97316;
  color: #FFFFFF;
  font-size: 12px;
  font-weight: 700;
  padding: 4px 8px;
  border-radius: 999px;
}

.profile-name {
  margin-bottom: 4px;
  text-align: center;
}

.profile-title {
  margin-bottom: 12px;
  text-align: center;
}

.badge-row {
  margin: 12px 0;
}

.points-display {
  background: #F3F4F6;
  border-radius: 999px;
  padding: 8px 16px;
  gap: 8px;
  margin-top: 8px;
}

.points-number {
  font-size: 32px;
  font-weight: 700;
  color: #1F2937;
}

.points-label {
  color: #6B7280;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 12px;
}

.action-btn, .sound-btn, .record-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 80rpx;
  border-radius: 999px; /* 胶囊型设计 */
}

.action-btn {
  flex: 1;
}

/* 确保所有按钮的图标和文本样式一致 */
.btn-icon {
  margin-right: 8rpx;
  font-size: 16px;
}

.btn-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  font-size: 14px;
}

/* 音效功能区样式 */
.custom-flex-row {
  display: flex;
  flex-direction: row;
  gap: 12px;
  align-items: center; /* 确保垂直居中对齐 */
  width: 100%;
  box-sizing: border-box;
}

.custom-flex-large {
  flex: 3 !important;
  min-width: 0;
  width: 0; /* 确保宽度计算正确 */
}

.custom-flex-small {
  flex: 2 !important;
  min-width: 0;
  width: 0; /* 确保宽度计算正确 */
}

/* 音效按钮颜色 */
.btn-accent-blue {
  background-color: #3498db;
  color: white;
}

.btn-accent-orange {
  background-color: #e67e22;
  color: white;
}

.sound-info {
  color: #666;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

/* 通用按钮样式 */
.btn {
  border-radius: 999px; /* 胶囊型设计 */
}

/* 评论区样式 */
.comment-input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12px;
  background-color: #f7f8fa;
  border-radius: 999px; /* 胶囊型设计 */
  padding: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  padding: 0 16rpx;
  background-color: #ffffff;
  border-radius: 999px; /* 胶囊型设计 */
  font-size: 28rpx;
  min-width: 0; /* 确保文本输入框可以被压缩 */
}

.comment-submit-btn {
  width: 120rpx;
  height: 72rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 999px; /* 胶囊型设计 */
  flex-shrink: 0; /* 防止按钮被压缩 */
}

/* 弹幕输入区样式 */
.danmaku-input {
  flex: 1;
  height: 72rpx;
  padding: 0 16rpx;
  background-color: #ffffff;
  border-radius: 999px; /* 胶囊型设计 */
  font-size: 28rpx;
}

/* 恢复弹幕输入区的边距 */
.danmaku-input-section {
  margin-bottom: 16px;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16px; /* 保持原有的圆角 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 输入框通用样式 */
.input {
  border-radius: 999px; /* 胶囊型设计 */
  background-color: #ffffff;
}

/* 成就项样式 */
.achievement-item {
  border-radius: 16rpx;
}

.add-achievement-btn {
  border-radius: 16rpx;
}

/* 回复容器样式 */
.replies-container {
  border-radius: 16rpx;
}

/* 弹窗基本样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

.modal-close {
  position: absolute;
  right: 24rpx;
  font-size: 32rpx;
  color: #999999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

/* 分享弹窗样式 */
.share-text {
  margin-bottom: 30rpx;
  text-align: center;
}

.share-text view {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666666;
}

.share-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #10B981;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 999rpx;
}

/* 事迹弹窗样式 */
.achievement-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.confirm-btn {
  width: 75%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #8B5CF6; /* 紫色 */
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 999rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  margin-right: auto;
}
