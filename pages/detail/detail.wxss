/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: #F7F8FA;
}

.content {
  padding-top: 16px;
  padding-bottom: 40px;
}

/* 确保所有区域宽度一致 */
.profile-card,
.action-buttons,
.sound-section,
.danmaku-input-section,
.achievements-section {
  margin: 0 20px;
  width: calc(100% - 40px);
  box-sizing: border-box;
  margin-bottom: 16px;
}

/* 音效功能区特殊处理，确保flex布局正确 */
/* .sound-section 使用p-16类，无需额外样式 */

/* 评论区单独处理，不受上面规则影响 */
.comments-section {
  margin: 0 20px;
  width: calc(100% - 40px);
  padding: 0 20px !important; /* 覆盖.p-16的padding: 16px */
  box-sizing: border-box;
  margin-bottom: 16px;
  overflow: visible !important; /* 覆盖.card的overflow: hidden */
}

/* 评论区的section-header下移16px */
.comments-section .section-header {
  margin-top: 16px;
}

/* 个人资料卡片 */
.profile-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24px;
  border-radius: 16px;
  margin-top: 20px;
}

.profile-avatar-container {
  position: relative;
  margin-bottom: 16px;
}

.profile-avatar {
  width: 96px;
  height: 96px; /* 恢复原来的头像高度 */
  border-radius: 50%;
  background: #F3F4F6;
  object-fit: cover;
}

.rank-tag {
  position: absolute;
  top: -4px;
  right: -8px;
  background: #F97316;
  color: #FFFFFF;
  font-size: 12px;
  font-weight: 700;
  padding: 4px 8px;
  border-radius: 999px;
}

.profile-name {
  margin-bottom: 4px;
  text-align: center;
}

.profile-title {
  margin-bottom: 12px;
  text-align: center;
}

.badge-row {
  margin: 12px 0;
}

.points-display {
  background: #F3F4F6;
  border-radius: 999px;
  padding: 8px 16px;
  gap: 8px;
  margin-top: 8px;
}

.points-number {
  font-size: 32px;
  font-weight: 700;
  color: #1F2937;
}

.points-label {
  color: #6B7280;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 12px;
}

.action-btn, .sound-btn, .record-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 72rpx;
  border-radius: 999px; /* 胶囊型设计 */
}

.action-btn {
  flex: 1;
}

/* 音效按钮应该遵循父容器的flex布局 */
.sound-btn, .record-btn {
  /* 移除 flex: none，让它们继承父容器的flex设置 */
  box-sizing: border-box;
  padding: 0 16rpx !important;
  width: 100%; /* 确保填充容器 */
  height: 100%; /* 确保继承容器高度 */
}

/* 覆盖全局按钮样式，统一高度为72rpx */
.btn {
  height: 72rpx !important;
  min-height: 72rpx !important;
  line-height: 1 !important;
}

.btn-primary {
  height: 72rpx !important;
  min-height: 72rpx !important;
  background-color: #007AFF !important;
  color: white !important;
  opacity: 1 !important;
}

.btn-primary[disabled] {
  background-color: #C7C7CC !important;
  color: #8E8E93 !important;
  opacity: 1 !important;
}

/* 确保所有按钮的图标和文本样式一致 */
.btn-icon {
  margin-right: 8rpx;
  font-size: 16px;
}

.btn-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  font-size: 14px;
  letter-spacing: 1px;
}

/* 音效功能区样式 */
.custom-flex-row {
  display: flex;
  flex-direction: row;
  gap: 12px;
  align-items: center; /* 确保垂直居中对齐 */
  align-content: center; /* 确保内容居中对齐 */
  justify-content: flex-start; /* 确保从左开始对齐 */
  width: 100%;
  box-sizing: border-box;
}

.custom-flex-large {
  flex: 3 !important;
  min-width: 0;
  width: 0; /* 恢复这行，对flex布局的宽度计算很重要 */
  /* 确保有足够的最小宽度 */
  min-width: 120rpx;
  /* 确保容器高度正确传递 */
  height: 72rpx;
  display: flex;
  align-items: center;
}

.custom-flex-small {
  flex: 2 !important;
  min-width: 0;
  width: 0; /* 恢复这行，对flex布局的宽度计算很重要 */
  /* 确保有足够的最小宽度 */
  min-width: 80rpx;
  /* 确保容器高度正确传递 */
  height: 72rpx;
  display: flex;
  align-items: center;
}

/* 音效按钮颜色 */
.btn-accent-blue {
  background-color: #3498db;
  color: white;
}

.btn-accent-orange {
  background-color: #e67e22;
  color: white;
}

.btn-accent-green {
  background-color: #10B981;
  color: white;
}

.sound-info {
  color: #666;
}

/* 录音进度条样式 */
.recording-progress {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px;
  background: #F3F4F6;
  border-radius: 999px;
  min-height: 72rpx;
  box-sizing: border-box;
  /* 确保不影响父容器的flex布局 */
  flex: none;
}

.progress-container {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 12px;
}

.progress-bar {
  flex: 1;
  height: 6px;
  background: #E5E7EB;
  border-radius: 3px;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: #8B5CF6;
  border-radius: 3px;
  transition: width 0.3s ease;
}

.progress-time {
  font-size: 12px;
  color: #6B7280;
  font-weight: 500;
  white-space: nowrap;
}

.recording-indicator {
  display: flex;
  align-items: center;
  gap: 6px;
}

.recording-dot {
  color: #EF4444;
  font-size: 12px;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

.recording-text {
  font-size: 12px;
  color: #6B7280;
  font-weight: 500;
}

/* 预览音效容器样式 */
.preview-sound-container {
  width: 100%;
  display: flex;
  align-items: center;
}

.preview-sound-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  position: relative;
}

/* 预览内容区域 */
.preview-content {
  display: flex;
  align-items: center;
  gap: 8px;
  pointer-events: none;
}

.delete-icon {
  font-size: 16px;
  color: #FFFFFF;
  font-weight: normal;
  line-height: 1;
  padding: 4px;
  border-radius: 4px;
  transition: background-color 0.2s ease;
  cursor: pointer;
}

.delete-icon:active {
  background-color: rgba(255, 255, 255, 0.2);
}

/* 录制中的操作按钮 */
.recording-actions {
  display: flex;
  flex-direction: row;
  gap: 8px;
  width: 100%;
  height: 72rpx;
  /* 确保不影响父容器的flex布局 */
  flex: none;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.confirm-record-btn,
.cancel-record-btn {
  flex: 1;
  height: 36px;
  font-size: 11px;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 50px;
  padding: 0 8px;
  white-space: nowrap;
}

.confirm-record-btn {
  background: #10B981;
  color: white;
}

.cancel-record-btn {
  background: #F3F4F6;
  color: #6B7280;
}

/* 当前音效提示 */
.current-sound-tip {
  margin-top: 12px;
  padding: 8px 12px;
  background: #F0F9FF;
  border-radius: 8px;
  border-left: 3px solid #0EA5E9;
}

.tip-text {
  font-size: 12px;
