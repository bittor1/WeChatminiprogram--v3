/* 回复指示器样式 */
.reply-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.reply-text {
  font-size: 28rpx;
  color: #666;
}

.cancel-reply {
  font-size: 26rpx;
  color: #1890ff;
  padding: 4rpx 12rpx;
}

/* 评论输入容器 */
.comment-input-container {
  padding: 16rpx;
}

.comment-input {
  flex: 1;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.comment-submit-btn {
  margin-left: 16rpx;
  padding: 16rpx 32rpx;
  background-color: #1890ff;
  color: white;
  border-radius: 8rpx;
  font-size: 30rpx;
}